<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setNotifLayout"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/setNotifFragTitle"
        android:text="Select Route:"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/routesRadioGroup"
        android:orientation="vertical"
        android:layout_below="@id/setNotifFragTitle"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">


        <!--
        These will be dynamically set
        -->
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notifyMeButton"
        android:text="Notify Me!"
        android:layout_below="@+id/routesRadioGroup"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"/>

</RelativeLayout>